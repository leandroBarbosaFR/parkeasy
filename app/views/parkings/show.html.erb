<div class="card-image text-center">
  <%= image_tag @parking.photos[0], crop: :fill, class: "img-fluid rounded-start" %>
</div>

<div class="my-container">
  <div class="card-body">
    <h1 class="card-title"><strong><%= @parking.title %></strong></h1>
    <p class="card-text"><small class="text-muted"><%= @parking.price %> € par Jour</p>
    <p class="card-text"><small class="text-muted"><%= @parking.description.capitalize %></small></p>
  </div>
</div>
<div class="container text-center">
  <div class="form-wrapper">
    <h2>Réservez votre place</h2>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :start_at, as: :string, required: false, input_html: {id: "range_start"} %>
      <%= f.input :end_at, as: :string, required: false, input_html: {id: "range_end"} %>
      <%= f.button :submit, "Réserver", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
